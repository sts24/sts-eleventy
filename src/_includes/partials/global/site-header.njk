<header class="site-header">
	<div class="row row-spaced row-vertical-center row-no-wrap padding-x-1 site-masthead">

		<a href="/" class="col-auto site-title" title="Scott" aria-label="Scott Smith">
			{% icon 'icon-s-mark','icon-size-2' %}
		</a>

		{% if navigation.items %}
		<nav id="site-nav" aria-label="Site Navigation">
			<ul class="site-nav-list" id="site-nav-list">
				{% for item in navigation.items %}
					<li><a href="{{ item.url }}">{{ item.text }}</a></li>
				{% endfor %}
			</ul>
		</nav>
		{% endif %}
	</div>
</header>
