<footer class="site-footer">
   
    {% if social_media.items %}
    <nav class="row row-center site-footer-nav">
        <ul class="col-auto special-links">
            {% for item in social_media.items %}
                <li class="menu-item">
                    <a href="{{ item.url }}" title="{{ item.title }}" rel="me">
                        {% icon item.icon, 'icon-size-2' %}
                        <span>{{ item.title }}</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    {% endif %}

</footer>