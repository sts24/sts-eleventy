{% if social_media.items %}
    <nav aria-label="Contact Links">
        <ul class="special-links">
            {% for item in social_media.items %}
                <li class="menu-item">
                    <a href="{{ item.url }}" title="{{ item.title }}" rel="me">
                        {% icon item.icon, 'icon-size-1' %}
                        <span class="sr-only">{{ item.title }}</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}