{% extends 'layouts/base.njk' %}

{% set pageType = 'home' %}

{% block content %}

{% sectionHeader %}
	<div class="col-s-8">
		<h1 class="margin-bottom-1">{{ settings.siteName }}</h1>
		<p class="intro">{{ settings.introCopy }}</p>
		<a href="/portfolio" class="btn">View Portfolio</a>
	</div>

	<div class="col-s-4 aligncenter">
		<img srcset="{{ settings.profileImage }}?nf_resize=fit&w=200&h=200 1x, {{ settings.profileImage }}?nf_resize=fit&w=400&h=400 2x" class="profile-image" />
	</div>
{% endsectionHeader %}

<main>
	<section class="row padding-x-3">
		<div class="col-s-12 col-m-8">

			{{ content | safe }}

		</div>
		<div class="col-s-12 col-m-4">
				
			<h3 class="margin-top-0">What I Work On</h3>

			<ul class="icon-grid">
				{% for item in app_tags.items %}
					<li aria-label="{{ item.title }}">{% icon item.icon, 'icon-size-3' %}</li>
				{% endfor %}
			</ul>

		</div>
	</section>

	<section class="row padding-bottom-3">

		<div class="col-s-12">
			<h2>Featured Work</h2>

			<div class="featured-grid">
				{% for item in collections.featuredPortfolios %}
					{% if loop.index0 < 4 %}
						<figure class="featured-grid-item">
							<header>{{ item.data.title }}</header>
							<a class="featured-grid-item-btn" href="{{ item.url }}"><span class="sr-only">{{ item.data.title }}</span></a>
							<img srcset="{{ item.data.image }}?nf_resize=fit&h=400 1x, {{ item.data.image }}?nf_resize=fit&h=800 2x" />
						</figure>
					{% endif %}
				{% endfor %}
            </div>

		</div>

	</section>

	<section class="row padding-bottom-5">
		<div class="col-s-12">
			<h2>Latest from the Journal</h2>
			
			{% for item in collections.posts | reverse %}
				{% if loop.index == '1' %}
					{% blogTitle 'h3','',item %}
					<p>{% cleanString item.data.content.substring(0,280) %}...</p>
				{% endif %}
			{% endfor %}

			<a href="/journal" class="btn margin-top-1">Read the Journal</a>

		</div>
	</section>


</main>
{% endblock %}