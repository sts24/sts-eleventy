{% extends 'layouts/base.njk' %}

{% block content %}

{% sectionHeader title,'page-header' %}
{% endsectionHeader %}




<main class="row padding-x-3">
	<div class="col-s-12">
		<ul class="list-inline tag-list">
			{% for tag in tools %}
				<li>{{ tag }}</li>
			{% endfor %}
		</ul>

		{{ content | safe }}

		{% if showcase %}
			{% for item in showcase %}
				<section class="listing-item">
					<div class="listing-image">
						<img srcset="{{ item.image }}?nf_resize=fit&w=800 2x, {{ item.image }}?nf_resize=fit&w=400 1x" class="attachment-large size-large" alt="" />
					</div>
					<div class="listing-content">
						<h2>{{ item.title | safe }}</h2>

						<p>{{ item.description | safe }}</p>

						{% if item.url %}
							<a href="{{ item.url }}" class="btn">View This Site</a>
						{% endif %}
					</div>
				</section>
			{% endfor %}
		{% endif %}
	</div>
</main>


{% endblock %}